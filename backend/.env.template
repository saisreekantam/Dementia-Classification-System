# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///./dementia_detection.db

# For PostgreSQL (uncomment and modify as needed)
# DATABASE_URL=postgresql://username:password@localhost:5432/dementia_detection

# For MySQL (uncomment and modify as needed)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/dementia_detection

# Security Configuration
# IMPORTANT: Change this to a secure random secret key in production!
SECRET_KEY=your-super-secret-key-change-this-in-production-please

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# CORS Configuration (adjust for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Logging Configuration
LOG_LEVEL=INFO

# Email Configuration (optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Model Configuration
NLP_MODEL_PATH=./backend/
CONFIDENCE_THRESHOLD_HIGH=0.8
CONFIDENCE_THRESHOLD_MEDIUM=0.6

# File Storage Configuration
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE_MB=10